{% extends 'base.html.twig' %}

{% block title %}House index{% endblock %}

{% block body %}
    <h1>House index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for house in houses %}
            <tr>
                <td>{{ house.name }}</td>
                <td>{{ house.description }}</td>
                <td>
                    <a href="{{ path('house_show', {'id': house.id}) }}">View house details</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('house_new') }}">Create new</a>
{% endblock %}