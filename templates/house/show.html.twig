{% extends 'base.html.twig' %}

{% block title %}House{% endblock %}

{% block body %}
    <h1>House</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ house.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ house.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ house.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('house_index') }}">back to list</a>

    <a href="{{ path('house_edit', {'id': house.id}) }}">edit</a>

    {{ include('house/_delete_form.html.twig') }}

    <h1>Comments</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Content</th>
            <th>Created</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in house.getComments() %}
            {% if comment.approved == 1 %}
                <tr>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.created|date('Y-m-d H:i:s') }}</td>
                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if house.getSponsor() is not null %}
        <h1>Sponsor's Profile</h1>
        {{ house.getSponsor().getProfile() }}
    {% endif %}

{% endblock %}