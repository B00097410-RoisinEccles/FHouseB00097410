        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for house in houses %}
            <tr>
                <td>{{ house.name }}</td>
                <td>{{ house.description }}</td>
                <td>
                    <!-- houseId, sponsorId -->
                    {{ include('sponsor/_associate_form.html.twig') }}
